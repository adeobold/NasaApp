<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NasaApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textColorConnected">@color/green</item>
        <item name="textColorDisConnected">@color/light_gray</item>
        <item name="themeColorPrimary">@color/teal_200</item>
        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.MediumComponent</item>
        <item name="materialButtonStyle">@style/AppButton</item>
        <item name="textInputStyle">@style/AppTextField</item>
        <item name="materialCardViewStyle">@style/AppCard</item>
    </style>

    <style name="AppTheme" parent="Theme.NasaApp">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="textColorConnected">@color/green</item>
        <item name="textColorDisConnected">@color/light_gray</item>
    </style>

    <style name="IndigoTheme" parent="AppTheme">
        <item name="colorPrimaryVariant">@color/indigo_dark</item>
        <item name="colorSecondary">@color/light_gray</item>
        <item name="colorSecondaryVariant">@color/light_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="themeColorPrimary">@color/teal_700</item>
    </style>

    <style name="PinkTheme" parent="AppTheme">
        <item name="colorPrimaryVariant">@color/pink_dark</item>
        <item name="colorSecondary">@color/pink_light</item>
        <item name="colorSecondaryVariant">@color/pink_light</item>
        <item name="colorOnSecondary">@color/pink_light</item>
        <item name="themeColorPrimary">@color/pink</item>
    </style>

    <style name="SquareTheme" parent="IndigoTheme">
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.Square.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.Square.MediumComponent</item>
    </style>

    <style name="RoundTheme" parent="PinkTheme">
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.Round.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.Round.MediumComponent</item>
    </style>

</resources>